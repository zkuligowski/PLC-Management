<Window x:Class="PlcApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlcApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Loginbtn" Content="Login" HorizontalAlignment="Center" VerticalAlignment="Top" Height="79" Width="238" Click="LoginButton_Click" Margin="0,25,0,0"/>
        <Button x:Name="Registerbtn" Content="Register new account" HorizontalAlignment="Center" Height="72" Margin="0,121,0,0" VerticalAlignment="Top" Width="238" Click="RegisterButton_Click"/>
        <Button x:Name="ScadaBtn" Content="Run App" HorizontalAlignment="Center" Height="72" Margin="0,222,0,0" VerticalAlignment="Top" Width="238" Click="RunApp_Click"/>
        <Button x:Name="CloseMainWindowBtn" Content="Close" HorizontalAlignment="Center" Height="72" Margin="0,311,0,0" VerticalAlignment="Top" Width="238" Click="CloseMainWindow_Click"/>

    </Grid>
</Window>
