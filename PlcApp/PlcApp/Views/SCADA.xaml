<Window x:Class="PlcApp.Views.SCADA"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlcApp.Views"
        mc:Ignorable="d"
        Title="SCADA" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="IPAdressLabel" HorizontalAlignment="Left" Height="24" Margin="48,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" RenderTransformOrigin="0.079,0.529"><Run Language="pl-pl" Text="IP Adress:"/></TextBlock>
        <TextBox x:Name="IPAdressText" HorizontalAlignment="Left" Height="38" Margin="48,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="265" Text="192.168.0.50"/>
        <Button x:Name="ConnectPLCButton" Content="Connect" HorizontalAlignment="Left" Height="38" Margin="48,147,0,0" VerticalAlignment="Top" Width="154" Click="Button_Click"/>
        <Button x:Name="WritePLCButton" Content="Write" HorizontalAlignment="Left" Height="58" Margin="461,246,0,0" VerticalAlignment="Top" Width="131" Click="Button_Click_1"/>
        <TextBox x:Name="InputTextBox" HorizontalAlignment="Left" Height="51" Margin="461,166,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="166" TextChanged="InputTextBox_TextChanged"/>

    </Grid>
</Window>
