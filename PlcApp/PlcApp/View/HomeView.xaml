<UserControl x:Class="PlcApp.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlcApp.View" xmlns:viewmodels="clr-namespace:PlcApp.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:HomeViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel x:Name="pnlHomeDescription">
            <TextBlock Text="{Binding CurrentHomeDescription.DisplayHomeInfo}"
                       Foreground="{StaticResource titleColor3}"
                       FontFamily="Montserrat"
                       FontSize="15"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
